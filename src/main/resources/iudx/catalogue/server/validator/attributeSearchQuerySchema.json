{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Attribute Search Schema",
  "type": "object",
  "required": [
    "searchCriteria"
  ],
  "properties": {
    "searchCriteria": {
      "type": "array",
      "minItems": 1,
      "maxItems": 4,
      "items": {
        "type": "object",
        "required": [
          "field",
          "values"
        ],
        "properties": {
          "field": {
            "type": "string"
          },
          "values": {
            "type": "array",
            "minItems": 1,
            "maxItems": 4,
            "items": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9]([\\w\\-.,:/()& ]*[a-zA-Z0-9])?$"
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}