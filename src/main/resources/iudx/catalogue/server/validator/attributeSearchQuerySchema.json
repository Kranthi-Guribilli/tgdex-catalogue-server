{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Attribute Search Schema",
  "type": "object",
  "required": ["property", "value"],
  "properties": {
    "property": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 4
    },
    "value": {
      "type": "array",
      "minItems": 1,
      "maxItems": 4,
      "items": {
        "type": "array",
        "minItems": 1,
        "maxItems": 4,
        "items": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9]([\\w-._:\\/() ]*[a-zA-Z0-9])?$"
        }
      }
    },
    "searchType": {
      "type": "string",
      "const": "attribute"
    }
  },
  "additionalProperties": true
}
